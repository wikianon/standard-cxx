all:
	@cmd /c "cd CaptiveCollector && nmake /nologo"
	@cmd /c "cd CaptiveControl && nmake /nologo"
	@cmd /c "cd Counters && nmake /nologo"
	@cmd /c "cd CpuGraph && nmake /nologo"
	@cmd /c "cd CpuMeter && nmake /nologo"
	@cmd /c "cd CpuPie && nmake /nologo"
	@cmd /c "cd GuruVision && nmake /nologo"
	@cmd /c "cd MemoryPie && nmake /nologo"
	@cmd /c "cd PageFilePie && nmake /nologo"
	@cmd /c "cd Top && nmake /nologo"
	@cmd /c "cd XERun && nmake /nologo"

install:
	@cmd /c "cd CaptiveCollector && nmake /nologo install"
	@cmd /c "cd CaptiveControl && nmake /nologo install"
	@cmd /c "cd Counters && nmake /nologo install"
	@cmd /c "cd CpuGraph && nmake /nologo install"
	@cmd /c "cd CpuMeter && nmake /nologo install"
	@cmd /c "cd CpuPie && nmake /nologo install"
	@cmd /c "cd GuruVision && nmake /nologo install"
	@cmd /c "cd MemoryPie && nmake /nologo install"
	@cmd /c "cd PageFilePie && nmake /nologo install"
	@cmd /c "cd Top && nmake /nologo install"
	@cmd /c "cd XERun && nmake /nologo install"

clean:
	@cmd /c "cd CaptiveCollector && nmake /nologo clean"
	@cmd /c "cd CaptiveControl && nmake /nologo clean"
	@cmd /c "cd Counters && nmake /nologo clean"
	@cmd /c "cd CpuGraph && nmake /nologo clean"
	@cmd /c "cd CpuMeter && nmake /nologo clean"
	@cmd /c "cd CpuPie && nmake /nologo clean"
	@cmd /c "cd GuruVision && nmake /nologo clean"
	@cmd /c "cd MemoryPie && nmake /nologo clean"
	@cmd /c "cd PageFilePie && nmake /nologo clean"
	@cmd /c "cd Top && nmake /nologo clean"
	@cmd /c "cd XERun && nmake /nologo clean"
