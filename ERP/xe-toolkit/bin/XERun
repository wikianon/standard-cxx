# The PATH must point to the Java 5 VM.
# If the default path points to an old version,
# modify the PATH variable here.

# PATH=/opt/java/bin:$PATH

TOP=`dirname $0`
if [ "$TOP" = "." ]; then
	TOP=`pwd`
fi
TOP=`dirname $TOP`

# defines
D="-Dcom.capmet.CaptiveCollector.Top=$TOP"

# use IPv4
v=`egrep -v '^#|^$' $TOP/etc/CaptiveCollector.properties | fgrep preferIPv4Stack`
if [ -z "$v" ]; then
  V4=""
else
  V4="-D""$v"
fi
unset v

if [ "`uname -s`" = "Darwin" ]; then
  N=`basename "$0"`
  D="$D -Dcom.apple.mrj.application.apple.menu.about.name=$N"
fi

CLASSPATH=$TOP/jars/CM.jar:$TOP/jars/XE.jar:$TOP/jars/Captivity.jar
CLASSPATH="$CLASSPATH":$TOP/jars/Chart2D.jar
CLASSPATH="$CLASSPATH":$TOP/jars/forms.jar
CLASSPATH="$CLASSPATH":$TOP/jars/looks.jar

export CLASSPATH

if [ -z "$DISPLAY" ]; then
  # punt
  DISPLAY=":0.0"
  export DISPLAY
fi

# for use with jhat when investigating unintentional object retention
#
# java -Xrunhprof:file=dump.hprof,format=b $D $V4 com.capmet.tools.XE.programs.`basename $0` $@

java $JFLAGS $D $V4 com.capmet.tools.XE.programs.`basename $0` "$@"
